{
  "name": "cdogs",
  "version": "2.0.0",
  "description": "CDOGS - A common document generation API",
  "scripts": {
    "build": "echo Nothing to build",
    "serve": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "lint": "node_modules/.bin/eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "lint:fix": "node_modules/.bin/eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "test": "node_modules/.bin/jest --verbose",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "posttest": "node ./lcov-fix.js",
    "purge": "rm -rf node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/common-document-generation-service.git"
  },
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/common-document-generation-service/issues"
  },
  "homepage": "https://bcgov.github.io/common-document-generation-service",
  "dependencies": {
    "@bcgov/carbone-copy-api": "^2.1.1",
    "api-problem": "^6.1.4",
    "atob": "^2.1.2",
    "axios": "^0.21.1",
    "axios-oauth-client": "^1.4.0",
    "axios-token-interceptor": "^0.2.0",
    "bytes": "^3.1.0",
    "carbone": "^2.1.1",
    "compression": "^1.7.4",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "keycloak-connect": "^10.0.2",
    "lockfile": "^1.0.4",
    "mime-types": "^2.1.28",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "npmlog": "^4.1.2",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.19.0",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.7"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/middleware/*.*",
      "!src/docs/*.*"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportPath": "coverage"
  }
}

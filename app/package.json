{
  "name": "common-document-generation-service",
  "version": "2.5.0",
  "description": "CDOGS - A common document generation API",
  "private": true,
  "scripts": {
    "build": "echo Nothing to build",
    "serve": "nodemon ./bin/www",
    "start": "node ./bin/www",
    "prune": "node ./cacheCleaner.js",
    "lint": "eslint . --no-fix --ignore-pattern 'node_modules' --ext .js",
    "lint:fix": "eslint . --fix --ignore-pattern 'node_modules' --ext .js",
    "test": "jest --verbose --forceExit --detectOpenHandles",
    "clean": "rm -rf coverage dist",
    "pretest": "npm run lint",
    "posttest": "node ./lcov-fix.js",
    "purge": "rm -rf node_modules",
    "rebuild": "npm run clean && npm run build",
    "reinstall": "npm run purge && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/common-document-generation-service.git"
  },
  "author": "NR Common Service Showcase <NR.CommonServiceShowcase@gov.bc.ca>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bcgov/common-document-generation-service/issues"
  },
  "homepage": "https://bcgov.github.io/common-document-generation-service",
  "dependencies": {
    "api-problem": "^9.0.2",
    "atob": "^2.1.2",
    "bytes": "^3.1.2",
    "carbone": "^3.5.5",
    "compression": "^1.7.4",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "keycloak-connect": "^22.0.4",
    "lockfile": "^1.0.4",
    "mime-types": "^2.1.35",
    "multer": "^1.4.4-lts.1",
    "telejson": "^7.2.0",
    "tmp": "^0.2.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-transport": "^4.6.0"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/middleware/*.*",
      "!src/docs/*.*"
    ]
  }
}
